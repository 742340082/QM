<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/qm10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/iv_game_top_icon1"
            android:layout_width="@dimen/qm160dp"
            android:layout_height="@dimen/qm80dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:src="@drawable/lufei" />

        <ImageView
            android:id="@id/iv_game_top_icon2"
            android:layout_width="@dimen/qm160dp"
            android:layout_height="@dimen/qm80dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:src="@drawable/lufei" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@id/rl_index_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>