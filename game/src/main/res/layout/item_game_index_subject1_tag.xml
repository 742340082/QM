<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bg_gray_splash"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/qm50dp"
        android:layout_height="@dimen/qm50dp"
        android:id="@+id/iv_subject_tag_icon"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/selector_bg_gray_splash"
        />
    <TextView
        android:layout_width="wrap_content"
        android:text="新游"
        android:id="@+id/tv_subject_tag_title"
        android:textColor="@color/viewBackground"
        android:layout_marginTop="@dimen/qm5dp"
        android:maxLength="5"
        android:textSize="@dimen/textSize"
        android:ellipsize="end"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />
</LinearLayout>