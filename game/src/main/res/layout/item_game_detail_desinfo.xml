<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >



    <TextView
        android:id="@+id/tv_detail_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#9e9e9e"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/rl_detail_toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@id/tv_game_detail_descinfo"
            android:layout_width="wrap_content"
            android:text="展开"
            android:textSize="@dimen/titleSize"
            android:layout_toLeftOf="@+id/iv_arrow"
            android:layout_marginRight="@dimen/qm5dp"
            android:textColor="@color/blue"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="@dimen/qm20dp"
            android:layout_height="@dimen/qm20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/qm20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_game_arrow_down" />
    </RelativeLayout>

</LinearLayout>