<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@id/ll_game_detail_desinfo"
    android:layout_marginTop="@dimen/qm5dp"
    android:background="@drawable/selector_bg_gray_white"
    android:layout_marginRight="@dimen/qm4dp"
    android:layout_marginLeft="@dimen/qm4dp"
    android:elevation="@dimen/qm4dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:text="游戏描述"
        android:layout_marginLeft="@dimen/qm10dp"
        android:layout_marginTop="@dimen/qm10dp"
        android:textColor="@color/textColorPrimary"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_detail_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_margin="@dimen/qm10dp"
        android:textColor="#9e9e9e"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/rl_detail_toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@id/tv_game_detail_descinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/qm5dp"
            android:layout_toLeftOf="@+id/iv_arrow"
            android:text="展开"
            android:textColor="@color/blue"
            android:textSize="@dimen/titleSize" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="@dimen/qm20dp"
            android:layout_height="@dimen/qm20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/qm20dp"
            android:layout_marginBottom="@dimen/qm10dp"
            android:src="@drawable/icon_game_arrow_down" />
    </RelativeLayout>

</LinearLayout>