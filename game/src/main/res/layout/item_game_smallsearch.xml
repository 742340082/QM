<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/ll_game_small_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bg_gray_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/qm10dp"
            android:src="@drawable/icon_gray_search" />

        <TextView
            android:id="@id/tv_game_small_search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/qm5dp"
            android:text="天天酷跑"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/titleSize" />
    </LinearLayout>
    <include layout="@layout/cut_horizontal_apart"/>

</LinearLayout>