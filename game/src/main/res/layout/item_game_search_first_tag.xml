<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/qm50dp"
    android:background="@drawable/selector_bg_gray_white"
    android:orientation="horizontal">

    <ImageView
        android:id="@id/iv_game_search_tag_icon"
        android:layout_width="@dimen/qm30dp"
        android:layout_height="@dimen/qm30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/qm10dp"
        android:src="@drawable/lufei" />

    <TextView
        android:id="@id/tv_game_search_tag_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/qm10dp"
        android:layout_marginRight="@dimen/qm10dp"
        android:text="天天酷跑" />
</LinearLayout>