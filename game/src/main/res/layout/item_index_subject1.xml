<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/ll_subject"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/qm5dp"
    android:layout_marginTop="@dimen/qm5dp"
    android:background="@color/blue"
    android:foreground="?android:selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/qm5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_margin="@dimen/qm10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@id/tv_subject_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每日推荐"
            android:textColor="@color/white"
            android:textSize="@dimen/titleSize" />


    </RelativeLayout>

    <TextView
        android:id="@id/ll_subject_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qm10dp"
        android:text="最新最好玩游戏大会"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize" />

    <LinearLayout
        android:id="@id/ll_subject_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/qm10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="@dimen/qm0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/qm10dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/qm50dp"
                android:layout_height="@dimen/qm50dp"
                android:id="@+id/iv_subject_tag_icon1"
                android:src="@drawable/lufei"
                android:layout_gravity="center_horizontal"
                android:foreground="?android:selectableItemBackground"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/qm2dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="新游"
                android:id="@+id/iv_subject_tag_title1"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/qm5dp"
                android:maxLength="5"
                android:textSize="@dimen/textSize"
                android:ellipsize="end"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/qm0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/qm10dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/qm50dp"
                android:layout_height="@dimen/qm50dp"
                android:id="@id/iv_subject_tag_icon2"
                android:src="@drawable/lufei"
                android:layout_gravity="center_horizontal"
                android:foreground="?android:selectableItemBackground"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/qm2dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="新游"
                android:id="@id/iv_subject_tag_title2"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/qm5dp"
                android:maxLength="5"
                android:textSize="@dimen/textSize"
                android:ellipsize="end"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/qm0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/qm10dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/qm50dp"
                android:layout_height="@dimen/qm50dp"
                android:id="@id/iv_subject_tag_icon3"
                android:src="@drawable/lufei"
                android:layout_gravity="center_horizontal"
                android:foreground="?android:selectableItemBackground"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/qm2dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="新游"
                android:id="@id/iv_subject_tag_title3"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:maxLength="5"
                android:textSize="@dimen/textSize"
                android:ellipsize="end"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/qm0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/qm10dp"
            android:layout_marginRight="@dimen/qm10dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/qm50dp"
                android:layout_height="@dimen/qm50dp"
                android:id="@id/iv_subject_tag_icon4"
                android:src="@drawable/lufei"
                android:layout_gravity="center_horizontal"
                android:foreground="?android:selectableItemBackground"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/qm2dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="新游"
                android:id="@id/iv_subject_tag_title4"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/qm5dp"
                android:maxLength="5"
                android:textSize="@dimen/textSize"
                android:ellipsize="end"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>