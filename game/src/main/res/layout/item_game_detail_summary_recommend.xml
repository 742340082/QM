<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bg_gray_white_night"
    android:orientation="vertical">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/qm50dp"
        android:layout_height="@dimen/qm50dp"
        android:id="@id/iv_game_detail_recommend_game_icon"
        android:layout_marginTop="@dimen/qm5dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/selector_bg_gray_splash"
        />
    <TextView
        android:layout_width="wrap_content"
        android:text="新游"
        android:id="@id/tv_game_detail_recommend_game_title"
        android:textColor="@color/textColorPrimary"
        android:layout_marginTop="@dimen/qm5dp"
        android:maxLength="5"
        android:textSize="@dimen/textSize"
        android:ellipsize="end"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="@dimen/qm60dp"
        android:text="下载"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/qm10dp"
        android:layout_marginBottom="@dimen/qm5dp"
        android:id="@id/btn_game_detail_recommend_download"
        android:textColor="@color/navigation_text_color"
        android:background="@color/colorPrimary"
        android:layout_height="@dimen/qm20dp" />
</LinearLayout>