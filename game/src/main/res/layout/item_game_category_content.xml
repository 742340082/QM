<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/qm5dp"
    android:layout_marginBottom="@dimen/qm5dp"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@id/Rl_game_category"
        android:layout_width="match_parent"
        android:background="@drawable/selector_bg_gray_white"
        android:layout_height="@dimen/qm40dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@id/iv_game_category_icon"
            android:layout_width="@dimen/qm30dp"
            android:src="@drawable/lufei"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/qm10dp"
            android:layout_height="@dimen/qm30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/iv_game_category_icon"
            android:layout_centerVertical="true"
            android:textSize="@dimen/titleSize"
            android:text="标题"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/qm10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/titleSize"
            android:text="新增96款"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/arrow_right"
            android:layout_marginRight="@dimen/qm10dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <include layout="@layout/cut_horizontal_apart"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qm40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/titleSize"
            android:background="@drawable/selector_bg_gray_white"
            android:text="游戏" />
        <include layout="@layout/cut_vertical_apart"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/titleSize"
            android:background="@drawable/selector_bg_gray_white"
            android:text="游戏" />
        <include layout="@layout/cut_vertical_apart"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/titleSize"
            android:background="@drawable/selector_bg_gray_white"
            android:text="游戏" />
        <include layout="@layout/cut_vertical_apart"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/titleSize"
            android:background="@drawable/selector_bg_gray_white"
            android:text="游戏" />
    </LinearLayout>
    <include layout="@layout/cut_horizontal_apart"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qm40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/titleSize"
            android:background="@drawable/selector_bg_gray_white"
            android:text="游戏" />
        <include layout="@layout/cut_vertical_apart"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/titleSize"
            android:background="@drawable/selector_bg_gray_white"
            android:text="游戏" />
        <include layout="@layout/cut_vertical_apart"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/titleSize"
            android:background="@drawable/selector_bg_gray_white"
            android:text="游戏" />
        <include layout="@layout/cut_vertical_apart"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/titleSize"
            android:background="@drawable/selector_bg_gray_white"
            android:text="游戏" />
    </LinearLayout>
</LinearLayout>