            <TextView
                android:layout_width="wrap_content"
                android:text="新游"
                android:id="@id/tv_game_category_title3"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/qm5dp"
                android:maxLength="5"
                android:textSize="@dimen/textSize"
                android:ellipsize="end"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/qm10dp"
                android:background="@drawable/border_white_bg_splash"
                android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center"
                        android:layout_margin="@dimen/qm3dp"
                        android:id="@id/tv_game_download_title3"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/textSizeMin"
                        android:textColor="@color/white"
                        android:text="10M"
                        android:layout_height="wrap_content" />

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/qm0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/qm10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/qm60dp"
                android:layout_height="@dimen/qm60dp"
                android:id="@id/iv_game_subject_tag_icon4"
                android:src="@drawable/lufei"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/selector_bg_gray_transparent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="新游"
                android:id="@id/tv_game_category_title4"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/qm5dp"
                android:maxLength="5"
                android:textSize="@dimen/textSize"
                android:ellipsize="end"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/qm10dp"
                android:background="@drawable/border_white_bg_splash"
                android:layout_height="wrap_content">
