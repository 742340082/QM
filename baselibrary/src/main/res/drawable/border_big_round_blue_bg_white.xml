<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--去掉上边框-->
    <item
        android:top="-1dp">
        <shape>
            <!-- 主体背景颜色值 -->
            <solid android:color="@color/white" />
            <!--边框的颜色-->
            <stroke
                android:width="1dp"
                android:color="@color/blue" />
            <!--圆形-->
            <corners
               android:radius="@dimen/qm50dp"/>
        </shape>
    </item>
</selector>