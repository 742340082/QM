<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"
    >

    <style name="AppTheme" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <!--<item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>-->
        <!--android5.0以下打开关闭activity的动画-->
        <item name="android:windowAnimationStyle">@style/slide</item>
        <!--android5.0打开activity的动画-->
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
        <item name="android:windowExitTransition">@android:transition/slide_right</item>
        <item name="android:windowReturnTransition">@android:transition/slide_right</item>
        <item name="android:windowReenterTransition">@android:transition/slide_right</item>


        <!--android5.0共享元素打开activity的动画-->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/qm_move</item>
        <item name="android:windowSharedElementExitTransition">@transition/qm_move</item>
        <item name="android:windowSharedElementReturnTransition">@transition/qm_move</item>
        <item name="android:windowSharedElementReenterTransition">@transition/qm_move</item>

        <!--默认menu的字体颜色-->
        <item name="actionMenuTextAppearance">@style/MenuTextStyle</item>
        <item name="actionMenuTextColor">@color/white</item>

        <!--默认设置打开应用的水平方式-->
        <item name="android:screenOrientation">portrait</item>

        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/yellow</item>
    </style>
    <!--打开和关闭activity的动画-->
    <style name="slide" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>
    <!--splash主题-->
    <style name="SplashTheme" parent="@style/AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>-->
    </style>
    <!--<style name="AppTheme.Widget.TextView" parent="@android:style/Widget.Holo.Light.TextView">-->
        <!--<item name="fontPath">fonts/shongti.ttf</item>-->
    <!--</style>-->
    <style name="MenuTextStyle">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="CustomDialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowBackground">@drawable/bg_dialog_custom</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

