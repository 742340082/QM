<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <style name="AppTheme" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <!--<item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>-->
        <!--android5.0以下打开关闭activity的动画-->
        <item name="android:windowAnimationStyle">@style/slide</item>

        <!--默认menu的字体颜色-->
        <item name="actionMenuTextAppearance">@style/MenuTextStyle</item>
        <item name="actionMenuTextColor">@color/navigation_text_color</item>

        <!--默认设置打开应用的水平方式-->
        <item name="android:screenOrientation">portrait</item>

        <!--actionbar北背景颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <!--控件选中的颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--应用背景色-->
        <item name="android:windowBackground">@color/AppBackground</item>

    </style>

    <!--打开和关闭activity的动画-->
    <style name="slide" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>
    <!--splash主题-->
    <style name="SplashTheme" parent="@style/AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>-->
    </style>

    <!--menu得字体大小和颜色-->
    <style name="MenuTextStyle">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!--toolbar默认标题的字体大小和颜色-->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/viewBackground</item>
    </style>
    <!--自定义dialog的主题-->
    <style name="CustomDialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowBackground">@drawable/dialog_black_bg</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>



    <style name="Bottom_Tab_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/selector_color_red_grayshallow_night</item>
        <item name="android:gravity">center</item>
    </style>

    <!--自定义CollapsingToolbarLayout字体大小 custom the title's text size of CollapsingToolBarLayout-->
    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ExpandedAppBarPlus1" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsedAppBarPlus1" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--用于解决夜间模式闪屏-->
    <style name="WindowAnimationFadeInOut">
        <item name="@android:windowEnterAnimation">@anim/fade_in</item>
        <item name="@android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <!--游戏详情页标题字体-->
    <style name="ToolBarTitleText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="transparentText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#00000000</item>
    </style>
</resources>
