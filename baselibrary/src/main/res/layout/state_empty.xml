<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="@dimen/qm8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80.0dip"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_state_empty" />

        <Button
            android:id="@+id/iv_content_error"
            android:layout_width="150.0dip"
            android:layout_height="40.0dip"
            android:layout_below="@+id/iv_network_error"
            android:layout_centerHorizontal="true"
            android:background="@drawable/selector_bg_green_green_night"
            android:text="数据为空"
            android:textColor="@color/navigation_text_color"
            android:textSize="20.0sp" />
    </LinearLayout>
</RelativeLayout>