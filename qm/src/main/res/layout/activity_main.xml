<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <com.baselibrary.view.NoScrollViewPager
        android:id="@id/vp_main"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>


    <android.support.design.widget.TabLayout
        android:id="@id/tl_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qm50dp"
        android:layout_marginBottom="@dimen/qm2dp"
        android:layout_marginLeft="@dimen/qm4dp"
        android:layout_marginRight="@dimen/qm4dp"
        android:layout_marginTop="@dimen/qm2dp"
        android:elevation="@dimen/qm8dp"
        android:background="@drawable/selector_bg_gray_white"
        app:tabIndicatorHeight="0dp"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextColor="@color/textColorPrimary"
         />

</LinearLayout>