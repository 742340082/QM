<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/rl_address"
    android:layout_width="match_parent"
    android:background="@drawable/selector_bg_gray_white"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@id/iv_address_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/qm10dp"
        android:src="@drawable/icon_address_tab_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/qm5dp"
        android:layout_marginLeft="@dimen/qm20dp"
        android:layout_marginTop="@dimen/qm5dp"
        android:layout_toRightOf="@id/iv_address_location"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@id/tv_address_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/titleSize"
                android:visibility="gone" />

            <TextView
                android:id="@id/tv_address_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/qm20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/address"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/titleSize" />
        </LinearLayout>

        <TextView
            android:id="@id/tv_address_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/qm20dp"
            android:layout_marginTop="@dimen/qm5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/address"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/titleSize" />

    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <include

            layout="@layout/cut_horizontal_apart"/>
    </LinearLayout>
</RelativeLayout>

