<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@id/fl_news_container"
             style="@style/AppTheme"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@id/srl_news_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@id/rv_news_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="true"
            android:scrollbarFadeDuration="1"
            android:scrollbars="vertical"/>
    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@id/fab_news"
        android:layout_width="@dimen/qm50dp"
        android:layout_height="@dimen/qm50dp"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="@dimen/qm10dp"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/qm10dp"
        android:src="@drawable/icon_news_placeholder"/>
</FrameLayout>